@model IEnumerable<WebQLCTTHTH.Models.ChuDe>

@using WebQLCTTHTH.Models;
@{
    ViewBag.Title = "Chủ Đề";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chủ Đề</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table id="table" class="display">
    <thead>
    <tr>
        <th>
            Chủ đề
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenCD)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaCD }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaCD }) 
                @*@Html.ActionLink("Xóa", "Delete", new { id = item.MaCD })*@
            </td>
        </tr>
    }
        </tbody>
</table>


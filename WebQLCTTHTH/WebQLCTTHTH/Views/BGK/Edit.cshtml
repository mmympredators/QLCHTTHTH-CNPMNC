@model WebQLCTTHTH.Models.ChuDe
@{
    ViewBag.Title = "Chỉnh sửa Chủ Đề";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Chỉnh sửa Chủ Đề</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaCD)
    <div class="form-horizontal">
        <h4>Chủ Đề</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCD)
        <div class="form-group">
            <p>Tên Chủ Đề</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenCD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCD, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở về", "ChuDe")
</div>

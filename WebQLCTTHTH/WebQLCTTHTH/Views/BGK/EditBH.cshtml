@model WebQLCTTHTH.Models.BaiHat
@{
    ViewBag.Title = "Chỉnh sửa Bài Hát";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Chỉnh sửa Bài Hát</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaBH)
    <div class="form-horizontal">
        <h4>Bài Hát</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaBH)
        <div class="form-group">
            <p>Tên Bài Hát</p>
            <div class="col-md-10">
                <input type="text" name="TenBH" required> 
            </div>
        </div>
        <div class="form-group">
            <p>Nhạc</p>
            <div class="col-md-10">
                <input type="text" name="Nhac" required>
            </div>
        </div>
        <div class="form-group">
            <p>Lời</p>
            <div class="col-md-10">
                <input type="text" name="Loi" required>
            </div>
        </div>
        <div class="form-group">
            <p>Mã Bài Hát</p>
            <div class="col-md-10">
                @Html.DropDownList("Ma_CD")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở về", "BaiHat")
</div>

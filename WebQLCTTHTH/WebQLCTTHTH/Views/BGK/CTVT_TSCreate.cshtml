@model IEnumerable<WebQLCTTHTH.Models.CTVT_TS>

@{
    ViewBag.Title = "Tạo mới Chi tiết Vòng Thi - Thí Sinh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo mới Chi tiết Vòng Thi - Thí Sinh</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Chi tiết Vòng Thi - Thí Sinh</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p>Mã Vòng Thi</p>
        <div class="col-md-10">
            @Html.DropDownList("Ma_VT")
        </div>
    </div>

    <div class="form-group">
        <p>Số báo danh</p>
        <div class="col-md-10">
            @Html.DropDownList("SBD")
        </div>
    </div>

    <div class="form-group">
        <p>Bài Hát Bắt Buộc</p>
        <div class="col-md-10">
            @Html.DropDownList("BaiHatBB")
        </div>
    </div>

    <div class="form-group">
        <p>Điểm Bài Hát Bắt Buộc</p>
        <div class="col-md-10">
            <input type="text" name="DiemBHBB" list="DiemBHBB" required>
            <datalist id="DiemBHBB">
                <option value="1">
                <option value="2">
                <option value="3">
                <option value="4">
                <option value="5">
                <option value="6">
                <option value="7">
                <option value="8">
                <option value="9">
                <option value="10">
            </datalist>
        </div>
    </div>

    <div class="form-group">
        <p>Bài Hát Tự Chọn</p>
        <div class="col-md-10">
            @Html.DropDownList("BaiHatTC")
        </div>
    </div>

    <div class="form-group">
        <p>Điểm Bài Hát Tự Chọn</p>
        <div class="col-md-10">
            <input type="text" name="DiemBHTC" list="DiemBHTC" required>
            <datalist id="DiemBHTC">
                <option value="1">
                <option value="2">
                <option value="3">
                <option value="4">
                <option value="5">
                <option value="6">
                <option value="7">
                <option value="8">
                <option value="9">
                <option value="10">
            </datalist>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở Về", "CTVT_TS")
</div>

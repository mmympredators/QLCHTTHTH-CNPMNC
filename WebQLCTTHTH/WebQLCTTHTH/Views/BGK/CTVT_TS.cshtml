            Điểm bài hát tự chọn
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VongThi.TenVT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThiSinh.HoTenTS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaiHat.TenBH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiemBHBB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaiHat.TenBH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiemBHTC)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "CTVT_TSEdit", new { id = item.MaCTVT_TS }) |
                @Html.ActionLink("Chi tiết", "CTVT_TSDetails", new { id = item.MaCTVT_TS }) |
                @Html.ActionLink("Xóa", "CTVT_TSDelete", new { id = item.MaCTVT_TS })

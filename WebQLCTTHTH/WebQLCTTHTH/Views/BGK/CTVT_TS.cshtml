@{
    ViewBag.Title = "Vòng Thi - Thí Sinh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Vòng Thi - Thí Sinh</h2>

<p>
    @Html.ActionLink("Tạo mới", "CTVT_TSCreate")
</p>
<table id="table" class="display">
    <thead>
    <tr>
        <th>
            Tên Vòng Thi
        </th>
        <th>
            Họ Tên Thí Sinh
        </th>
        <th>
            Bài hát bắt buộc
        </th>
        <th>
            Điểm bài hát bắt buộc
        </th>

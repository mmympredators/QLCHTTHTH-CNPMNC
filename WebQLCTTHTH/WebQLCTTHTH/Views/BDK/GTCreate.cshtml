@model WebQLCTTHTH.Models.GiaiThuong

@{
    ViewBag.Title = "Tạo mới Giải Thưởng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo mới Giải Thưởng</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Giải Thưởng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>Tên Giải Thưởng</p>
            <div class="col-md-10">
                <input type="text" name="TenGiaiThuong" required>
            </div>
        </div>

        <div class="form-group">
            <p>Số Tiền Thưởng</p>
            <div class="col-md-10">
                <input type="number" name="SoTienThuong" min="10000000" required>
                VNĐ
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "GT")
</div>

@model WebQLCTTHTH.Models.DotThi

@{
    ViewBag.Title = "Tạo mới Đợt Thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DTCreate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Đợt Thi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>Năm Thi</p>
            <div class="col-md-10">
                <input type="text" name="NamThi" required>
                @Html.ValidationMessageFor(model => model.NamThi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Nội Dung</p>
            <div class="col-md-10">
                <input type="text" name="NoiDung" required>
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "DT")
</div>

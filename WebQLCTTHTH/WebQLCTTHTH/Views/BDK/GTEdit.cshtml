@model WebQLCTTHTH.Models.GiaiThuong
@{
    ViewBag.Title = "Chỉnh sửa Giải Thưởng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Giải Thưởng</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaGT)
    <div class="form-horizontal">
        <h4>Xóa Giải Thưởng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaGT)
        <div class="form-group">
            <p>Tên Giải Thưởng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenGiaiThuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenGiaiThuong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p>Số Tiền Thưởng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoTienThuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoTienThuong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở về", "GT")
</div>

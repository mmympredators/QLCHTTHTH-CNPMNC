@model WebQLCTTHTH.Models.VongThi
@{
    ViewBag.Title = "Chỉnh sửa Vòng Thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Chỉnh sửa Vòng Thi</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaVT)
    <div class="form-horizontal">
        <h4>Vòng Thi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaVT)
        <div class="form-group">
            <p>Vòng Thi</p>
            <div class="col-md-10">
                <input type="text" name="TenVT" required>
                @Html.ValidationMessageFor(model => model.TenVT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở về", "VT")
</div>

@model WebQLCTTHTH.Models.NhaTaiTro

@{
    ViewBag.Title = "Tạo mới Nhà Tài Trợ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo mới Nhà Tài Trợ</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nhà Tài Trợ</h4>B
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>Tên Nhà Tài Trợ</p>
            <div class="col-md-10">
                <input type="text" name="TenNTT" required>
            </div>
        </div>

        <div class="form-group">
            <p>Địa Chỉ Nhà Tài Trợ</p>
            <div class="col-md-10">
                <input type="text" name="DiaChiNTT" required>
            </div>
        </div>

        <div class="form-group">
            <p>Email Nhà Tài Trợ</p>
            <div class="col-md-10">
                <input name="EmailNTT" type="email" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "NTT")
</div>

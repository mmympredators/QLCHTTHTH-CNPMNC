@model WebQLCTTHTH.Models.CTTTDT

@{
    ViewBag.Title = "Chỉnh sửa Chi tiết Tài Trợ Đợt Thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa chi tiết Tài Trợ Đợt Thi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaCTTTDT)
<div class="form-horizontal">
    <h4>Chi tiết Tài Trợ Đợt Thi</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaCTTTDT)

    <div class="form-group">
        <p>Lần Thi</p>
        <div class="col-md-10">
            <input type="text" name="LT" required>
        </div>
    </div>
    <div class="form-group">
        <p>Nhà Tài Trợ</p>
        <div class="col-md-10">
            @Html.DropDownList("Ma_NTT")
        </div>
    </div>
    <div class="form-group">
        <p>Số Tiền Tài Trợ</p>
        <div class="col-md-10">
            <input type="number" name="SoTienTaiTro" min="0" required>
        </div>
    </div>

    <div class="form-group">
        <p>Hình Thức Quảng Cáo</p>
        <div class="col-md-10">
            <input type="text" name="LoaiQuangCao" list="HTQC" required>
            <datalist id="HTQC">
                <option>Truyền hình</option>
                <option>Băng rôn</option>
                <option>Tờ rơi</option>
            </datalist>
        </div>
    </div>

    <div class="form-group">
        <p>Loại Quảng Cáo</p>
        <div class="col-md-10">
            <input type="text" name="LoaiQuangCao" list="QuangCao" required>
            <datalist id="QuangCao">
                <option>Chính</option>
                <option>Phụ</option>
            </datalist>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "CTTTDT")
</div>

@model WebQLCTTHTH.Models.NhaTaiTro

@{
    ViewBag.Title = "Xóa Nhà Tài Trợ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa Nhà Tài Trợ</h2>

<h3>Bạn có muốn xóa Nhà Tài Trợ này không?</h3>
<div>
    <h4>Nhà Tài Trợ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Nhà Tài Trợ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNTT)
        </dd>

        <dt>
            Địa Chỉ Nhà Tài Trợ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChiNTT)
        </dd>

        <dt>
            Email Nhà Tài Trợ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailNTT)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "NTT")
        </div>
    }
</div>
